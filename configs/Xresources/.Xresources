! ------------------------------------------------------------------------------
! rofi mrczlnks color theme
! ------------------------------------------------------------------------------
rofi.location:          7
rofi.color-enabled:     true
!                       'background', 'border'
rofi.color-window:      argb:ff2c2c2c, argb:ff2c2c2c
! State:                'bg',          'fg',   'bgalt',       'hlbg',        'hlfg'
rofi.color-normal:      argb:ff272727, #ffffff, argb:cc272727, argb:ff383838, argb:ffffffff
rofi.color-urgent:      argb:99ffffff, #ffffff, argb:99333333, argb:ff494949, argb:ffffffff
rofi.separator-style:   solid
rofi.fullscreen:        false
rofi.padding:           16
rofi.hide-scrollbar:    true
rofi.line-margin:       4
rofi.line-padding:      3
rofi.fake-transparency: false
rofi.yoffset:           -64
rofi.xoffset:           20
rofi.width:             360
rofi.lines:		4
rofi.opacity:           1
rofi.font:              Roboto Regular 12

Xft.antialias:  1
Xft.autohint:   0
Xft.dpi:        96
Xft.hinting:    1
Xft.hintstyle:  hintslight
Xft.lcdfilter:  lcddefault
Xft.rgba:       rgb
