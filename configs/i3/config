bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# restart polybar inplace
bindsym $mod+Shift+p exec pkill -USR1 polybar
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec exit i3 # "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
# shutdown computer without asking anything
#bindsym $mod+Shift+x exec sudo shutdown now
# restart computer (go to boot screen) without asking anything
#bindsym $mod+Shift+b exec sudo reboot

# resizing window 
bindsym $mod+Control+j resize shrink width 64 px or 64 ppt
bindsym $mod+Control+k resize grow height 64 px or 64 ppt
bindsym $mod+Control+l resize shrink height 64 px or 64 ppt
bindsym $mod+Control+semicolon resize grow width 64 px or 64 ppt

# resizing window, with arrows
bindsym $mod+Control+Left resize shrink width 64 px or 64 ppt
bindsym $mod+Control+Down resize grow height 64 px or 64 ppt
bindsym $mod+Control+Up resize shrink height 64 px or 64 ppt
bindsym $mod+Control+Right resize grow width 64 px or 64 ppt

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
#bar {
#        position top
#}

# remove title bars everywhere
for_window [class=".*"] border pixel 0

# changing focused window colours
client.focused #333333 #333333 #333333 #333333   #333333

# add wallpaper to desktops
exec --no-startup-id feh --bg-fill ~/Pictures/wallpapers/wallpaper.jpg

# add lockscreen
bindsym Shift+$mod+l exec i3lock -c 000000

# add audio handlers on razer keyboard audio management device
bindsym XF86AudioRaiseVolume exec pamixer --increase 2
bindsym XF86AudioLowerVolume exec pamixer --decrease 2
bindsym XF86AudioMute exec pamixer --toggle-mute
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# add monitor brightness handlers
bindsym XF86MonBrightnessUp exec light -A 5
bindsym XF86MonBrightnessDown exec light -U 5

# add audio daemon for GUI usage
exec --no-startup-id pasystray

# toggle polybar
bindsym $mod+Shift+h exec ~/.scripts/toggle_polybar.sh

# add maim for screenshots
bindsym Control+$mod+p exec maim -m 1 ~/Screenshots/$(date +%s).png

# add screenshots on area to clipboard
bindsym Control+$mod+o exec maim -s | xclip -selection clipboard -t image/png

# change screen off to 30 minutes
exec --no-startup-id xset dpms 0 0 1800

# enable polybars
exec --no-startup-id $HOME/.scripts/toggle_polybar.sh
exec --no-startup-id compton
